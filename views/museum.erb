
<h2>Here are All of the Artworks for :<%= @museum.name() %></h2>



<div class='form-group'>
  <ul>
    <% @museum.artworks().each() do |artwork| %>

    <li><%= artwork.description() %></li>
    <% end %>
  </ul>
</div>


<form action='/museums/:id' method='post'>

  <input id='museum_id' name='museum_id' type='hidden' value='<%= @museum.id %>'>

  <label for='description'>Add an Artwork to this Museum</label>

  <input id= 'description' name='description' type='text'>
  <button type='submit' class='btn btn-submit'>Add</button>


</form>



<div class="form-group">
  <h3> Update the <%=@museum.name %> Museum Name: </h3>

  <form action='/museums/ <%= @museum.id %>' method='post'>
    <input name='_method' type='hidden' value='patch'>

    <label for='name'> Rename The Museum:</label>
    <input id='name' name='name' type='text'>

    <button type='submit' class='btn btn-submit'> Update </button>

  </form>
</div>

<div class="container">
  <form action='/' method='post'>
    <input name='_method' type='hidden' value='delete'>
    <input id='id' name='id' type='hidden' value='<%= @museum.id %>'>

    <button type="submit" class='btn btn-danger'>Delete Museum</button>
  </form>
</div>

<p><h3><a href='/'>Return to Main Page</h3></a></p>
